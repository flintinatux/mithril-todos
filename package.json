{
  "name": "mithril-todos",
  "description": "Description",
  "author": "Scott McCormack",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/flintinatux/mithril-todos"
  },
  "scripts": {
    "build": "npm run build:scripts && npm run build:styles && npm run build:markup",
    "build:markup": "jade client/index.jade -O public/assets.json -o public",
    "build:scripts": "browserify client/app.coffee -d -t coffeeify --extension=.coffee -p [minifyify --compressPath . --map /app.js.map --output public/app.js.map] | hashmark -n public/app.js -s -l 8 -m public/assets.json 'public/{name}-{hash}{ext}'",
    "build:styles": "lessc client/app.less --clean-css='--s0 --compatibility=ie8' | autoprefixer | hashmark -n public/app.css -s -l 8 -m public/assets.json 'public/{name}-{hash}{ext}'",
    "clean": "rm -rf public/*",
    "prebuild": "npm run clean",
    "prewatch": "npm run clean",
    "start": "coffee server/main.coffee",
    "watch": "parallelshell 'npm run watch:markup' 'npm run watch:scripts' 'npm run watch:styles' 'npm run watch:server' 'npm run watch:reload'",
    "watch:markup": "nodemon -q -w client/index.jade --exec 'npm run watch:markup:rebuild'",
    "watch:markup:rebuild": "jade -P client/index.jade -o public",
    "watch:reload": "live-reload --port 9091 public/",
    "watch:scripts": "watchify client/app.coffee -d -t coffeeify --extension=.coffee -o public/app.js -v",
    "watch:server": "nodemon -w server/ server/main.coffee",
    "watch:styles": "nodemon -q -w client/ -e less --exec 'npm run watch:styles:rebuild'",
    "watch:styles:rebuild": "lessc --source-map --source-map-less-inline --source-map-map-inline client/app.less | autoprefixer > public/app.css"
  },
  "dependencies": {
    "autoprefixer": "^4.0.0",
    "browserify": "^7.0.3",
    "coffee-script": "^1.8.0",
    "coffeeify": "^1.0.0",
    "express": "^4.10.6",
    "hashmark": "^2.0.1",
    "jade": "^1.8.2",
    "less": "^2.1.2",
    "less-plugin-clean-css": "^1.3.1",
    "lodash": "^2.4.1",
    "minifyify": "^4.4.0",
    "mithril": "^0.1.27"
  },
  "devDependencies": {
    "live-reload": "^0.2.0",
    "nodemon": "^1.2.1",
    "parallelshell": "^1.0.3",
    "watchify": "^2.2.1"
  }
}
